@model ck_project.Models.ProposalViewModel

@{
    ViewBag.Title = "Proposal_Page1";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <meta charset="utf-8" />
    <link href="@Url.Content("~/Content/Print.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div id="p1">
        <div style="display: block"><img src="~/Content/Images/proposal_pic1.png" style="float: left; position: absolute"/></div>
        <div id="right-content" style="margin-left: 400px; overflow: visible">
            <div style="top: 20%; font-size:30px">CREATIVE KITCHENS</div>
            <div style="top: 30%; font-size:26px">PROPOSAL</div>
            <div style="top: 50%; font-size:20px">with</div>
            <div style="top: 70%; font-size:24px">@Model.Lead.customer.customer_firstname @Model.Lead.customer.customer_lastname</div>
            <div style="top: 72%; font-size:24px">@Model.Lead.customer.address.address1</div>
            <div style="top: 74%; font-size:24px">@Model.Lead.customer.address.city, @Model.Lead.customer.address.state @Model.Lead.customer.address.zipcode</div>
            <img src="~/Content/Images/proposal_pic2.png" align="middle" style="position:relative; left: 25%; top:80%">
            <div style="top: 90%; font-size:20px">
                <table>
                    @{ foreach (var b in Model.Branch)
                        {
                            <tr>
                                <td>@b.address.address1, @b.address.city, @b.address.state @b.address.zipcode</td>
                            </tr>
                        }
                    }
                </table>
            </div>
        </div>
    </div>
</body>
</html>