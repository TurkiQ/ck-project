@model ck_project.Models.ProjectSummary

@{ 
    ViewBag.Title = "SoldJobNotice";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    @*<meta name="viewport" content="initial-scale=1.0">*@
    <title>Sale Contract Management System</title>
    <link href="~/Content/bootstrap.sandstone.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Print.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="pic2" align="center"><img src="~/Content/Images/proposal_pic2.png" /></div>
    <div align="center" style="padding-bottom: 10%"><h2><b>SOLD JOB NOTICE</b></h2></div>
    <table>
        <tr>
            <td class="left_text">Check #:</td>
            <td class="left_data"></td>
            <td class="right_text">Deposit Amount:</td>
            <td class="right_data"></td>
        </tr>
        <tr>
            <td class="left_text">Job Name:</td>
            @{
                if (Model.Lead != null)
                {
                    <td class="left_data">@Model.Lead.customer.customer_firstname @Model.Lead.customer.customer_lastname</td>
                }
                else
                {
                    <td class="left_data"></td>
                }
            }
            <td class="right_text">Deposit Date:</td>
            @{
                if (Model.Lead != null)
                {
                    <td class="right_data">@String.Format("{0:M/d/yyyy}", Model.Lead.Last_update_date)</td>
                }
                else
                {
                    <td class="right_data"></td>
                }
            }
        </tr>
        <tr>
            <td class="left_text">Project Reference:</td>
            @{
                if (Model.Lead != null)
                {
                    <td class="left_data">@Model.Lead.project_name</td>
                }
                else
                {
                    <td class="left_data"></td>
                }
            }
        </tr>
        <tr>
            <td class="left_text">Address:</td>
            @{
                if (Model.Lead != null)
                {
                    <td class="left_data">@Model.Lead.customer.address.address1</td>
                }
                else
                {
                    <td class="left_data"></td>
                }
            }
        </tr>
        <tr>
            <td class="left_text">City/State:</td>
            @{
                if (Model.Lead != null)
                {
                    <td class="left_data">@Model.Lead.customer.address.city, @Model.Lead.customer.address.state</td>
                }
                else
                {
                    <td class="left_data"></td>
                }
            }
            <td class="right_text">Zip Code:</td>
            @{
                if (Model.Lead != null)
                {
                    <td class="right_data">@Model.Lead.customer.address.zipcode</td>
                }
                else
                {
                    <td class="right_data"></td>
                }
            }
        </tr>
        <tr>
            <td class="left_text">Home Phone:</td>
            @{
                if (Model.Lead != null)
                {
                    <td class="left_data">@Model.Lead.customer.phone_number</td>
                }
                else
                {
                    <td class="left_data"></td>
                }
            }
            <td class="right_text">Cell/Alt Phone:</td>
            @{
                if (Model.Lead != null)
                {
                    <td class="right_data">@Model.Lead.customer.second_phone_number</td>
                }
                else
                {
                    <td class="right_data"></td>
                }
            }
        </tr>
        <tr>
            <td class="left_text">Job Total:</td>
            @{
                if (Model.TotalCost != null)
                {
                    <td class="left_data">@Model.TotalCost.total_cost1</td>
                }
                else
                {
                    <td class="left_data"></td>
                }
            }
            <td class="right_text">Designer:</td>
            @{
                if (Model.Lead != null)
                {
                    <td class="right_data">@Model.Lead.employee.emp_firstname @Model.Lead.employee.emp_lastname</td>
                }
            }
        </tr>
    </table>
    <table style="margin-top: 5%">
        <tr>
            <td class="left_text">
                @Model.Lead.delivery_status.delivery_status_name
            </td>
            
            @{ if (Model.Lead.in_city)
                {
                    <td style="width: 200px; text-align:center">In City</td>
                }
                else
                {
                    <td style="width: 200px; text-align:center">Out of City</td>
                }
            }
            <td style="width: 200px; text-align:center">
                @Model.Lead.address.city
            </td>
            <td style="width: 200px; text-align:center">
                @Model.Lead.project_class.class_name
            </td>
            <td style="border: solid 1px gray; width: 60px"></td>
            <td style="width: 120px; padding-left: 5px">C.O.D</td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td style="border: solid 1px gray; width: 60px"></td>
            <td style="width: 120px; padding-left: 5px">D.O.R.I</td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td style="border: solid 1px gray; width: 60px"></td>
            <td style="width: 120px; padding-left: 5px">N-10</td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td style="border: solid 1px gray; width: 60px"></td>
            <td style="width: 120px; padding-left: 5px">N-30</td>
        </tr>
    </table>
</body> 
</html>
